<h1><%= t('Restore') %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_tag({action: :restore}, multipart: true) do %>
      <div class="form-group">
        <%= label_tag :restore_data, t('Upload_File') %>
        <%= file_field_tag 'restore_data', {class: "file"} %>
      </div>
      <div class="form-group">
        <%= submit_tag t('Upload'), class: "btn btn-large btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
