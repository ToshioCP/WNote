<div class="page-header">
  <h1><%= t('log_in')+' ' %><small><%= t('Input_email_password') %></small></h1>
</div>
<%= form_tag({controller: "logins", action: "create"}, method: "post") do %>
  <div class="form-group">
    <%= label_tag :email, t('email') %><br>
    <%= text_field_tag :email, nil, class: "form-control", placeholder: t('email') %>
  </div>
  <div class="form-group">
    <%= label_tag :password, t('password') %><br>
    <%= password_field_tag :password, nil, class: "form-control", placeholder: t('password') %>
  </div>
  <div class="form-group">
    <%= submit_tag t('log_in'), class: "btn btn-primary" %>
  </div>
<% end %>
