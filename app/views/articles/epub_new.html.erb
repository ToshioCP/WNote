<h2>epub opf data</h2>

<%= form_tag({controller: "articles", action: "epub"}, {method: "post", multipart: true}) do %>
  <div class="form-group">
    <%= label_tag(:language, "Language") %><br>
    <%= text_field_tag(:language, 'ja', {class: "form-control", placeholder: "language"}) %>
  </div>
  <div class="form-group">
    <%= label_tag(:title, "Title") %><br>
    <%= text_field_tag(:title, @article.title, {class: "form-control", placeholder: "title"}) %>
  </div>
  <div class="form-group">
    <%= label_tag(:author, "Author") %><br>
    <%= text_field_tag(:author, @user.name, {class: "form-control", placeholder: "author"}) %>
  </div>
  <div class="form-group">
    <%= label_tag(:datetime, "Date & Time") %><br>
    <%= select_datetime Time.now, include_seconds: true%>
  </div>
  <div class="form-group">
    <%= label_tag(:uuid, "UUID") %><br>
    <%= text_field_tag(:uuid, SecureRandom.uuid, {class: "form-control", placeholder: "uuid"}) %>
  </div>
  <p>
    The following field can be empty if you want.
  </p>
  <div class="form-group">
    <%= label_tag(:cover_jpg, "Cover Jpeg Data") %><br>
    <%= file_field_tag :cover_jpg %>
  </div>
  <div class="form-group">
    <%= label_tag(:css_file, "Css File") %><br>
    <%= file_field_tag :css_file %>
  </div>
  <div class="form-group">
    <%= submit_tag 'submit' %>
  </div>
<% end %>
