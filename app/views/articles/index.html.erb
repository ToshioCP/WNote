<% if login? %>
  <% content_for :navigation do %>
     <li><%= link_to 'New Article', new_users_article_path %></li>
  <% end %>
<% end %>

<h2>Listing Articles</h2>

<table class="table">
  <thead>
    <tr>
      <th class='col-md-1'>Show</th>
      <th class='col-md-3'>Title</th>
      <th class='col-md-3'>Author</th>
      <th class='col-md-5'>Date</th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= link_to 'Show', article, class: 'btn btn-sm btn-info', role: 'button' %></td>
        <td><%= article.title %></td>
        <td><%= article.author %></td>
        <td><%= article.date %></td>
      </tr>
    <% end %>
  </tbody>
</table>

